                  <% group.each do |resource| %>
                    <% next if resource.nil? %>
                    <div class="form-check">
                      <input class="form-check-input"
                             type="checkbox"
                             id="resource_supported_<%=resource.resource_type %>"
                             name="resource_supported_<%=resource.resource_type %>"
